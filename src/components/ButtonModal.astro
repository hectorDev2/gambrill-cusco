<!-- Main modal -->
<div
  id="static-modal"
  data-modal-backdrop="static"
  tabindex="-1"
  aria-hidden="true"
  class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
>
  <div class="relative p-4 w-full max-w-2xl max-h-full">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <!-- Modal header -->
      <div
        class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600"
      >
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
          Como trabajamos?
        </h3>
        <button
          type="button"
          id="close"
          class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
          data-modal-hide="static-modal"
        >
          <svg
            class="w-3 h-3"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>

      <lite-youtube
        videoplay="Mirar"
        videotitle="Mis hijos se burlan de mi espaÃ±ol"
        videoid="J7AasnDTEW4"
      >
      </lite-youtube>
    </div>
  </div>
</div>
<script>
  import "@justinribeiro/lite-youtube";
  import { Modal } from "flowbite";

  // select the two elements that we'll work with
  const $buttonElement: HTMLElement | null = document.querySelector("#button");
  const $modalElement: HTMLElement | null =
    document.querySelector("#defaultModal");

  const $modalVideo: any = document.querySelector("video");
  const $modalClose: any = document.querySelector("#close");

  // create a new modal component
  const modal = new Modal($modalElement);

  // toggle the visibility of the modal when clicking on the button
  if ($buttonElement) {
    $buttonElement.addEventListener("click", () => modal.toggle());
  }
  if ($modalVideo) {
    console.log($modalVideo, "modal video");
    $modalClose.addEventListener("click", () => {
      console.log("cerrar");
      $modalVideo.pause();
    });
  }
</script>
